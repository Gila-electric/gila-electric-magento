<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-rewardsystem-index-link" ifconfig="rewardsystem/general_settings/enable">
                <arguments>
                    <argument name="path" xsi:type="string">rewardsystem</argument>
                    <argument name="label" xsi:type="string" translate="true">My Reward Points</argument>
                </arguments>
            </block>
            <block class="Webkul\RewardSystem\Block\View\Html\ReferralProgramLink" name="customer-account-rewardsystem-referral-link" ifconfig="rewardsystem/general_settings/enable">
                <arguments>
                    <argument name="path" xsi:type="string">rewardsystem/referral/index</argument>
                    <argument name="label" xsi:type="string" translate="true">Referral Program</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
