type StoreConfig {
    rewardsystem_enable : Int @doc(description: "Enable Reward System Module")
    rewardsystem_reward_value : Int @doc(description: "1 Reward Point Value is Equals to")
    rewardsystem_max_reward_assign : Int @doc(description: "Maximum Reward Points can Assign to a Customer")
    rewardsystem_max_reward_used : Int @doc(description: "Maximum Reward Points can be Used By a Customer")
    rewardsystem_allow_registration : Int @doc(description: "Allow Reward Points on Registration")
    rewardsystem_registration_reward : String @doc(description: "Reward Points On Registration")
    rewardsystem_allow_review : String @doc(description: "Allow Reward Points on Product Review")
    rewardsystem_review_reward : String @doc(description: "Reward Points On Product Review")
}

type Query {
    rewardProductList(
        filter: RewardProductFilters @doc(description: "Identifies which reward product to search for and return.")
        ): RewardProductList @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\RewardProductList") @doc(description: "Return query of reward products list")

    rewardProductSpecificList(
        filter: RewardProductSpecificFilters @doc(description: "Identifies which reward specific time product to search for and return.")
        ): RewardProductSpecificList @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\RewardProductSpecificList") @doc(description: "Return query of reward products for specific time list")

    rewardCategoryList(
        filter: RewardCategoryFilters @doc(description: "Identifies which reward category to search for and return.")
        ): RewardCategoryList @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\RewardCategoryList") @doc(description: "Return query of reward categories list")

    rewardCategorySpecificList(
        filter: RewardCategorySpecificFilters @doc(description: "Identifies which reward specific time category to search for and return.")
        ): RewardCategorySpecificList @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\RewardCategorySpecificList") @doc(description: "Return query of reward categories for specific time list")

    rewardRecordList(
        filter: RewardRecordFilters @doc(description: "Identifies which reward record to search for and return.")
        ): RewardRecordList @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\RewardRecordList") @doc(description: "Return query of reward record list")

    rewardIndividualList(
        customerId: Int! @doc(description: "Customer ID")
        filter: RewardIndividualFilters @doc(description: "Identifies which reward individual record to search for and return.")
        ): RewardIndividualList @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\RewardIndividualList") @doc(description: "Return query of reward individual record list")

    rewardCartPointsList(
        filter: RewardCartPointsFilters @doc(description: "Identifies which reward cart record to search for and return.")
        ): RewardCartPointsList @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\RewardCartPointsList") @doc(description: "Return query of reward cart list")

    rewardCartPointsData(
        id: Int @doc(description: "reward cart points ID")
        ): RewardCartPointsData @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\RewardCartPointsData") @doc(description: "Return query of reward cart data")

    rewardAttributePointsList(
        filter: RewardAttributePointsFilters @doc(description: "Identifies which reward attribute record to search for and return.")
        ): RewardAttributePointsList @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\RewardAttributePointsList") @doc(description: "Return query of reward attribute list")

    rewardAttributePointsData(
        id: Int @doc(description: "reward attribute record ID")
        ): RewardAttributePointsData @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\RewardAttributePointsData") @doc(description: "Return query of reward attribute data")

    customerRewardDetail(
        filter: CustomerRewardFilters @doc(description: "Identifies which reward record to search for and return.")
        ): CustomerRewardDetailOutput @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\CustomerRewardDetail") @doc(description: "Return query of customer reward record list")
}

type Mutation {
    updateProductRewardPoint(
        input: ProductRewardPointInput! @doc(description: "input data of products reward point")
        ): RewardSystemDefaultResponse @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\UpdateProductRewardPoint") @doc(description: "Update reward point of products.")

    updateProductSpecificRewardPoint(
        input: ProductSpecificRewardPointInput! @doc(description: "input data of products reward point for specific time")
        ): RewardSystemDefaultResponse @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\UpdateProductSpecificRewardPoint") @doc(description: "Update reward point of products for specific time.")

    updateCategoryRewardPoint(
        input: CategoryRewardPointInput! @doc(description: "input data of categories reward point")
        ): RewardSystemDefaultResponse @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\UpdateCategoryRewardPoint") @doc(description: "Update reward point of categories.")

    updateCategorySpecificRewardPoint(
        input: CategorySpecificRewardPointInput! @doc(description: "input data of categories reward point for specific time")
        ): RewardSystemDefaultResponse @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\UpdateCategorySpecificRewardPoint") @doc(description: "Update reward point of categories for specific time.")

    addRewardTransaction(
        input: RewardTransactionInput! @doc(description: "input data for reward transaction")
        ): RewardSystemMultiMessageResponse @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\AddRewardTransaction") @doc(description: "Add reward transaction.")

    manageRewardCartPoints(
        ids: [Int]! @doc(description: "Array of reward cart points Ids")
        action: RewardListActionEnum! @doc(description: "Identifies the action on reward cart points.")
        ): RewardSystemDefaultResponse @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\ManageRewardCartPoints") @doc(description: "Manage reward cart points.")

    saveRewardCartPoints(
        input: RewardCartPointsInput! @doc(description: "input data for reward cart points")
        ): RewardSystemDefaultResponse @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\SaveRewardCartPoints") @doc(description: "Save reward cart points.")

    manageRewardAttributePoints(
        ids: [Int]! @doc(description: "Array of reward attribute points Ids")
        action: RewardListActionEnum! @doc(description: "Identifies the action on reward attribute points.")
        ): RewardSystemDefaultResponse @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\ManageRewardAttributePoints") @doc(description: "Manage reward attribute points.")

    saveRewardAttributePoints(
        input: RewardAttributePointsInput! @doc(description: "input data for reward attribute points")
        ): RewardSystemDefaultResponse @resolver(class:"Webkul\\RewardSystem\\Model\\Resolver\\Admin\\SaveRewardAttributePoints") @doc(description: "Save reward attribute points.")

    applyWkRewardToCart(
        input: ApplyWkRewardToCartInput @doc(description: "An input object that defines the rewards to apply to the cart.")
        ): ApplyWkRewardToCartOutput @resolver(class: "Webkul\\RewardSystem\\Model\\Resolver\\Checkout\\ApplyRewards") @doc(description:"Apply rewards to the specified cart.")

    removeWkRewardFromCart(
        input: RemoveWkRewardFromCartInput @doc(description: "An input object that defines the rewards to remove from the cart.")
        ): RemoveWkRewardFromCartOutput @resolver(class: "Webkul\\RewardSystem\\Model\\Resolver\\Checkout\\CancelRewards") @doc(description:"Cancel rewards from the specified cart.")
}

input ApplyWkRewardToCartInput @doc(description: "Specifies the reward points to apply to the cart.") {
    cart_id: String! @doc(description: "The unique ID of a `Cart` object.")
    used_reward_points: Int! @doc(description: "Number of reward points to apply.")
}

type ApplyWkRewardToCartOutput @doc(description: "Contains details about the cart after applying rewards.") {
    cart: Cart! @doc(description: "The cart after applying rewards.")
}

input RemoveWkRewardFromCartInput @doc(description: "Specifies the cart from which to remove rewards.") {
    cart_id: String! @doc(description: "The unique ID of a `Cart` object.")
}

type RemoveWkRewardFromCartOutput @doc(description: "Contains details about the cart after removing rewards.") {
    cart: Cart @doc(description: "The cart after removing rewards.")
}

