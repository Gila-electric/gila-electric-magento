<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Sales:etc/sales.xsd">

    <section name="quote">
        <group name="totals">
            <!-- Run LAST so it isn't overwritten by tax/shipping collectors -->
            <item name="ignitix_shipping_discount"
                  instance="Ignitix\ShippingDiscounts\Model\Quote\Total\ShippingDiscount"
                  sort_order="999"/>
        </group>
    </section>

    <section name="order">
        <group name="totals">
            <item name="ignitix_shipping_discount"
                  instance="Ignitix\ShippingDiscounts\Model\Sales\Total\Order\ShippingDiscount"
                  sort_order="999"/>
        </group>
    </section>

</config>