<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Remove default category description -->
        <referenceBlock name="category.description" remove="true" />

        <!-- Add it after everything else in the content area -->

        <referenceContainer name="content">
            <block class="Magento\Catalog\Block\Category\View"
                   name="category.description.bottom"
                   template="Magento_Catalog::category/description.phtml"
                   after="-"/>
        </referenceContainer>
    </body>
</page>
