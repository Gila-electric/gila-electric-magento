<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">ignitix_productaddons_rule_listing.ignitix_productaddons_rule_listing_data_source</item>
            <item name="deps" xsi:type="string">ignitix_productaddons_rule_listing.ignitix_productaddons_rule_listing_data_source</item>
        </item>

        <item name="spinner" xsi:type="string">ignitix_productaddons_rule_columns</item>

        <item name="buttons" xsi:type="array">
            <item name="add" xsi:type="array">
                <item name="name" xsi:type="string">add</item>
                <item name="label" xsi:type="string" translate="true">Add New Rule</item>
                <item name="class" xsi:type="string">primary</item>
                <!-- IMPORTANT: generate admin URL with secret key -->
                <item name="url" xsi:type="url" path="ignitix_productaddons/rule/new"/>
            </item>
        </item>
    </argument>

    <dataSource name="ignitix_productaddons_rule_listing_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
            </item>
            <!-- IMPORTANT: update_url must be here (NOT inside dataProvider) -->
            <item name="config" xsi:type="array">
                <item name="update_url" xsi:type="url" path="mui/index/render"/>
                <item name="storageConfig" xsi:type="array">
                    <item name="indexField" xsi:type="string">rule_id</item>
                </item>
            </item>
        </argument>

        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Ignitix\ProductAddons\Ui\DataProvider\Rule\ListingDataProvider</argument>
            <argument name="name" xsi:type="string">ignitix_productaddons_rule_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">rule_id</argument>
            <argument name="requestFieldName" xsi:type="string">rule_id</argument>
        </argument>
    </dataSource>

    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>

    <columns name="ignitix_productaddons_rule_columns">
        <column name="rule_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>

        <column name="name">
            <settings>
                <filter>text</filter>
                <label translate="true">Name</label>
            </settings>
        </column>

        <column name="is_active">
            <settings>
                <filter>select</filter>
                <label translate="true">Active</label>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
            </settings>
        </column>

        <column name="sort_order">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Sort</label>
            </settings>
        </column>

        <column name="addon_sku">
            <settings>
                <filter>text</filter>
                <label translate="true">Addon SKU</label>
            </settings>
        </column>

        <actionsColumn name="actions" class="Ignitix\ProductAddons\Ui\Component\Listing\Column\RuleActions">
            <settings>
                <indexField>rule_id</indexField>
                <label translate="true">Actions</label>
            </settings>
        </actionsColumn>
    </columns>
</listing>