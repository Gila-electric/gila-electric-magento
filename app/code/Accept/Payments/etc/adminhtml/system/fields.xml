<?xml version="1.0"?>

<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <field id="logo" translate="logo" type="image" sortOrder="50" showInDefault="1"
           showInWebsite="1" showInStore="1">
        <label>Select Logo</label>
        <backend_model>Accept\Payments\Model\Image</backend_model>
        <base_url type="media" scope_info="1">paymentslogo</base_url>
    </field>
    <field id="instructions" translate="label" type="textarea" sortOrder="62" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Instructions</label>
    </field>
    <field id="min_order_total" translate="label" type="text" sortOrder="98" showInDefault="1" showInWebsite="1" showInStore="0">
        <label>Minimum Order Total</label>
        <validate>validate-number validate-zero-or-greater</validate>
    </field>
    <field id="max_order_total" translate="label" type="text" sortOrder="99" showInDefault="1" showInWebsite="1" showInStore="0">
        <label>Maximum Order Total</label>
        <validate>validate-number validate-zero-or-greater</validate>
    </field>
    <field id="order_status" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="30" translate="label" type="select">
         <label>New Order Status</label>
         <source_model>Magento\Sales\Model\Config\Source\Order\Status\NewStatus</source_model>
    </field>
</include>
