<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="salesrule_rule_condition_combine">
        <observer name="Amasty_CompanyAccount::AddCondition" instance="Amasty\CompanyAccount\Observer\AddCondition"/>
    </event>
    <event name="adminhtml_sales_order_create_process_data_before">
        <observer name="Amasty_CompanyAccount::ValidateCustomer"
                  instance="Amasty\CompanyAccount\Observer\Adminhtml\Sales\ValidateCustomer"/>
    </event>
    <event name="payment_method_is_active">
        <observer name="Amasty_CompanyAccount::LockAdminPayments" instance="Amasty\CompanyAccount\Observer\Adminhtml\PaymentMethodIsActive"/>
    </event>
</config>
