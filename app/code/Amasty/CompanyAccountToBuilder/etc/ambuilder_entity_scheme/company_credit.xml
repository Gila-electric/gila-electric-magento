<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:amasty:module:Amasty_ReportBuilder:etc/entity_scheme.xsd">
    <amasty_report_builder_entities>
        <entity name="company_credit">
            <title>Amasty CA Credit</title>
            <main_table>amasty_company_credit</main_table>

            <columns>
                <column name="id" primary="true">
                    <title>Credit Id</title>
                </column>
            </columns>

            <relations>
                <relation name="company" type="column">
                    <column>company_id</column>
                    <reference_column>company_id</reference_column>
                    <relationship_type>one_to_one</relationship_type>
                </relation>
            </relations>
        </entity>
    </amasty_report_builder_entities>
</config>
