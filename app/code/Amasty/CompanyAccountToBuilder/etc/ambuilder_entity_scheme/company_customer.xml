<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:amasty:module:Amasty_ReportBuilder:etc/entity_scheme.xsd">
    <amasty_report_builder_entities>
        <entity name="company_customer">
            <title>Amasty CA Customer</title>
            <main_table>amasty_company_account_customer</main_table>

            <columns>
                <column name="customer_id" primary="true" />

                <column name="role_id">
                    <hidden>true</hidden>
                </column>

                <column name="role_name" columnType="foreign">
                    <title>Role Name</title>
                    <link>company_role.role_name</link>
                </column>
            </columns>

            <relations>
                <relation name="company" type="column">
                    <column>company_id</column>
                    <reference_column>company_id</reference_column>
                    <relationship_type>many_to_one</relationship_type>
                </relation>
                <relation name="company_role" type="column">
                    <column>role_id</column>
                    <reference_column>role_id</reference_column>
                    <relationship_type>one_to_one</relationship_type>
                    <join_type>left</join_type>
                </relation>
                <relation name="customer" type="column">
                    <column>customer_id</column>
                    <reference_column>entity_id</reference_column>
                    <relationship_type>one_to_one</relationship_type>
                </relation>
            </relations>
        </entity>
    </amasty_report_builder_entities>
</config>
